{% extends 'base.html.twig' %}
{% block title %}{{ 'home.show.title'|trans() }}{% endblock title %}
{% block description %}{{ 'home.show.description'|trans() }}{% endblock description %}
{% block content %}
    {{ parent() }}
    <div class="home-show container-fluid"
        style="background:url({{ asset('img/snowtrick.jpg') }});">
        <div class="home-show-jumbotron jumbotron jumbotron-fluid text-center">
            <div class="home-show-description align-middle lead">{{ block('description') }}</div>
            <i id="arrow-scroll-down" class="arrow-scroll fas fa-arrow-down position-absolute"></i>
        </div>
        <ul id="infinite-scroll-{{ random() }}"
            class="home-show-trick-list row list-unstyled infinite-scroll"
            data-url="{{ url('get_trick_collection') }}?order[createdAt]=DESC">
        </ul>
    </div>
{% endblock content %}

