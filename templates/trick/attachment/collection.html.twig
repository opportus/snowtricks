{% block trickAttachmentList %}

    {% if entity is not null and not entity.attachments %}
        {% set display = 'd-none' %}
    {% else %}
        {% set display = '' %}
    {% endif %}
    <div id="trick-attachment-carousel" class="carousel slide {{ display }}" data-ride="carousel" data-interval="0">
        <ul class="carousel-inner row w-100 mx-auto trick-attachment-list list-unstyled" role="listbox">
            {% if entity is not null %}
                {% for attachment in entity.attachments %}
                    {% if attachmentCounter is defined %}
                        {% set attachmentCounter = attachmentCounter + 1 %}
                        {% set active = '' %}
                    {% else %}
                        {% set attachmentCounter = 0 %}
                        {% set active = 'active' %}
                    {% endif %}

                    <li id="trick-attachment-{{ attachmentCounter }}" class="trick-attachment-list-item carousel-item col-md-4 {{ active }}" data-attachment-counter="{{ attachmentCounter }}">
                        <div class="embed-responsive embed-responsive-16by9 z-depth-1">
                            {% if 'image' in attachment.type %}
                                <img class="trick-list-item-featured-attachment embed-responsive-item img-fluid mx-auto d-block w-100"
                                    src="{{ attachment.src }}">
                                </img>
                            {% else %}
                                <iframe class="trick-list-item-featured-attachment embed-responsive-item"
                                    src="{{ attachment.src }}"
                                    frameborder="0">
                                </iframe>
                            {% endif %}
                        </div>
                        {% if edit is defined %}
                            <ul class="trick-attachment-list-action-list list-inline position-absolute bg-light p-2 border border-secondary" style="right:30px;top:10px;">
                                <li class="list-inline-item">
                                    <i class="trick-attachment-list-action-list-remove-item fas fa-trash-alt ajax-action" data-action="removeTrickAttachment" style="cursor:pointer;"></i>
                                </li>
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
        <a class="trick-attachment-carousel-control d-none carousel-control-prev ml-3" style="background:rgba(0,0,0,0.5);" href="#trick-attachment-carousel" role="button" data-slide="prev">
            <i class="fa fa-chevron-left fa-lg" style="color:#fff;"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="trick-attachment-carousel-control d-none carousel-control-next mr-3 text-faded" style="background:rgba(0,0,0,0.5);" href="#trick-attachment-carousel" role="button" data-slide="next">
            <i class="fa fa-chevron-right fa-lg" style="color:#fff;"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}